<?xml version="1.0" ?>

<robot name="my_robot">
  <!-- Materials -->
  <gazebo reference="link_chassis">
    <visual>
      <material>
        <!-- Blue -->
        <ambient>0.0 0.0 1.0 1.0</ambient>
        <diffuse>0.0 0.0 1.0 1.0</diffuse>
        <specular>0.0 0.0 0.0 1.0</specular>
        <emissive>0.0 0.0 0.0 1.0</emissive>
      </material>
    </visual>
  </gazebo>
  <gazebo reference="link_caster_wheel">
    <visual>
      <material>
        <!-- Gray -->
        <ambient>0.25 0.25 0.25 1.0</ambient>
        <diffuse>0.25 0.25 0.25 1.0</diffuse>
        <specular>0.0 0.0 0.0 1.0</specular>
        <emissive>0.0 0.0 0.0 1.0</emissive>
      </material>
    </visual>
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>0.0</mu>
            <mu2>0.0</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </gazebo>
  <gazebo reference="link_left_wheel">
    <visual>
      <material>
        <!-- Black -->
        <ambient>0.1 0.1 0.1 1.0</ambient>
        <diffuse>0.1 0.1 0.1 1.0</diffuse>
        <specular>0.0 0.0 0.0 1.0</specular>
        <emissive>0.0 0.0 0.0 1.0</emissive>
      </material>
    </visual>
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>0.5</mu>
            <mu2>0.5</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </gazebo>
  <gazebo reference="link_right_wheel">
    <visual>
      <material>
        <!-- Black -->
        <ambient>0.1 0.1 0.1 1.0</ambient>
        <diffuse>0.1 0.1 0.1 1.0</diffuse>
        <specular>0.0 0.0 0.0 1.0</specular>
        <emissive>0.0 0.0 0.0 1.0</emissive>
      </material>
    </visual>
    <collision>
      <surface>
        <friction>
          <ode>
            <mu>0.5</mu>
            <mu2>0.5</mu2>
          </ode>
        </friction>
      </surface>
    </collision>
  </gazebo>
  <!-- Prevent links with fixed joint from being considered as one-->
  <gazebo reference="joint_chassis_caster_wheel">
    <preserveFixedJoint>true</preserveFixedJoint>
  </gazebo>
  <!-- Differential Drive Plugin -->
  <gazebo>
    <plugin filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
      <left_joint>joint_chassis_left_wheel</left_joint>
      <right_joint>joint_chassis_right_wheel</right_joint>
      <wheel_separation>1.66</wheel_separation>
      <!-- To consider angular velocity commands-->
      <wheel_radius>0.4</wheel_radius>
      <!-- To consider linear velocity commands-->
      <odom_publish_frequency>20</odom_publish_frequency>
      <topic>my_robot/cmd_vel</topic>
      <odom_topic>my_robot/odom</odom_topic>
      <tf_topic>my_robot/tf</tf_topic>
      <frame_id>my_robot/odom</frame_id>
      <child_frame_id>link_chassis</child_frame_id>
    </plugin>
  </gazebo>
  <!-- Laser scan (Lidar) Plugin-->
  <gazebo reference="joint_laser_scan_chassis">
    <preserveFixedJoint>true</preserveFixedJoint>
  </gazebo>
  <gazebo reference="link_laser_scan">
    <material>Gazebo/DarkGrey</material>
  </gazebo>
  <gazebo reference="link_laser_scan">
    <!-- Laser Scan Plugin -->
    <sensor name="head_hokuyo_sensor" type="gpu_lidar">
      <pose>0 0 0 0 0 0</pose>
      <always_on>1</always_on>
      <visualize>true</visualize>
      <update_rate>20</update_rate>
      <topic>my_robot/laser/scan</topic>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.20</min>
          <!-- To not hit the internal structure of the link laser_scanner, a cylinder of radius 0.15 -->
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
    </sensor>
    <!-- RGB Camera Plugin -->
    <sensor name="camera_rgb" type="camera">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <topic>my_robot/camera/image_raw</topic>
      <ignition_frame_id>link_camera_optical_rgb</ignition_frame_id>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <!-- 60 degrees -->
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
    </sensor>
    <!-- Depth Camera Plugin -->
    <sensor name="camera_depth" type="depth">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <topic>my_robot/camera/depth</topic>
      <ignition_frame_id>link_camera_optical_depth</ignition_frame_id>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <!-- 60 degrees -->
        <image>
          <width>640</width>
          <height>480</height>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>
  <!-- IMU Plugin -->
  <gazebo reference="link_chassis">
    <sensor name="imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>20</update_rate>
      <visualize>true</visualize>
      <topic>my_robot/imu</topic>
    </sensor>
  </gazebo>
  <!-- Parameters -->
  <!-- pi already defined by default in xacro -->
  <!-- <xacro:property name="pi" value="3.141592654" /> -->
  <!-- Link - chassis-->
  <link name="link_chassis">
    <inertial>
      <mass value="10"/>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <inertia ixx="1.5417" ixy="0" ixz="0" iyy="3.467" iyz="0" izz="4.742"/>
    </inertial>
    <collision>
      <geometry>
        <box size="2 1.3 0.4"/>
      </geometry>
    </collision>
    <visual>
      <geometry>
        <box size="2 1.3 0.4"/>
      </geometry>
      <material name="chassis_DarkBlue">
        <color rgba="0 0 0.5 1"/>
      </material>
    </visual>
  </link>
  <!-- Joint -chassis / left wheel -->
  <joint name="joint_chassis_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.5 0.65 0"/>
    <child link="link_left_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="1000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <!--Link - left wheel -->
  <link name="link_left_wheel">
    <inertial>
      <mass value="1"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.002526" ixy="0" ixz="0" iyy="0.002526" iyz="0" izz="0.005"/>
    </inertial>
    <collision>
      <origin rpy="1.5707963267948966 0 0" xyz="0 0.18 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.4"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="1.5707963267948966 0 0" xyz="0 0.18 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.4"/>
      </geometry>
      <material name="left_outer_black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.5707963267948966 0 0" xyz="0 0.06 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.08"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="1.5707963267948966 0 0" xyz="0 0.06 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.08"/>
      </geometry>
      <material name="left_inner_black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  <!-- Joint -chassis / right wheel-->
  <joint name="joint_chassis_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.5 -0.65 0"/>
    <child link="link_right_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="1000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <!--Link - right wheel -->
  <link name="link_right_wheel">
    <inertial>
      <mass value="1"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.002526" ixy="0" ixz="0" iyy="0.002526" iyz="0" izz="0.005"/>
    </inertial>
    <collision>
      <origin rpy="1.5707963267948966 0 0" xyz="0 -0.18 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.4"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="1.5707963267948966 0 0" xyz="0 -0.18 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.4"/>
      </geometry>
      <material name="right_outer_black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.5707963267948966 0 0" xyz="0 -0.06 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.08"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="1.5707963267948966 0 0" xyz="0 -0.06 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.08"/>
      </geometry>
      <material name="right_inner_black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>
  <!-- Joint -chassis / caster wheel-->
  <joint name="joint_chassis_caster_wheel" type="fixed">
    <origin rpy="0 0 0" xyz="0.8 0 -0.275"/>
    <child link="link_caster_wheel"/>
    <parent link="link_chassis"/>
  </joint>
  <!--Link - caster wheel -->
  <link name="link_caster_wheel">
    <inertial>
      <mass value="1"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0125" ixy="0" ixz="0" iyy="0.0125" iyz="0" izz="0.0125"/>
    </inertial>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.125"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.125"/>
      </geometry>
      <material name="caster_darkblue">
        <color rgba="0 0 0.5 1"/>
      </material>
    </visual>
  </link>
  <!-- Laser Scan -->
  <joint name="joint_laser_scan_chassis" type="fixed">
    <origin rpy="0 0 0" xyz="0.8 0 0.3"/>
    <child link="link_laser_scan"/>
    <parent link="link_chassis"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
  <link name="link_laser_scan">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0002526" ixy="0" ixz="0" iyy="0.0002526" iyz="0" izz="0.0005"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.20" radius="0.15"/>
      </geometry>
      <material name="laser_scan_red">
        <color rgba="0.7 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.20" radius="0.15"/>
      </geometry>
    </collision>
  </link>
  <!-- RGB Camera -->
  <joint name="joint_camera_optical_rgb" type="fixed">
    <origin rpy="-1.570796 0 -1.570796" xyz="0 0 0"/>
    <parent link="link_laser_scan"/>
    <child link="link_camera_optical_rgb"/>
  </joint>
  <link name="link_camera_optical_rgb"/>
  <!-- Depth Camera -->
  <joint name="joint_camera_optical_depth" type="fixed">
    <origin rpy="-1.570796 0 -1.570796" xyz="0 0 0"/>
    <parent link="link_laser_scan"/>
    <child link="link_camera_optical_depth"/>
  </joint>
  <link name="link_camera_optical_depth"/>
</robot>

